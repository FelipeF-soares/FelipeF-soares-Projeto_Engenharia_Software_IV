@model List<Homeowner>

<div class="container">
    <div class="card text-center shadow">
        <div class="card-header">
            <div class="row">
                <div class="col-9">
                    <h3> Lista De Proprietários</h3>
                </div>
                <div class="col-3">
                    <a asp-area="Admin" asp-controller="Homeowner" asp-action="Add" class="btn btn-outline-success btn-sm">Adicionar Proprietário</a>
                </div>
            </div>
        </div>
                <div class="card-body text-center">
                    @if (Model.Count <= 0)
                    {
                        <h1 class="card-title p-2">Lista está vazia!</h1>
                    }
                    else
                    {
                <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Documento</th>
                                    <th scope="col">Unidade</th>
                                    <th scope="col">Atualizar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var owner in Model)
                                {
                                    var units = owner.Units.ToList();
                                    <tr>
                                        <td>@owner.Name</td>
                                        <td>@owner.IdentificationDocument</td>
                                        <td>
                                            <select class="form-select" aria-label="Default select example">
                                                @foreach (var unit in units)
                                                {
                                                    <option value="@unit.Id">Bloco: @unit.Building Apto: @unit.UnitNumber</option>
                                                }
                                            </select>
                                        </td>
                                        <td><a asp-area="Admin" asp-controller="Homeowner" asp-action="Update" asp-route-id="@owner.Id" class="btn btn-secondary btn-sm">Atualizar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            
    </div>
</div>




