@model HomeownerVM
<div class="container">
    <div class="card shadow">
        <div class="card-header text-center">
            <h2>Atualizar Proprietário</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <input asp-for="@Model.Homeowner.Id" hidden/>
                <div class="mb-3">
                    <label asp-for="@Model.Homeowner.Name" class="form-label"></label>
                    <input asp-for="@Model.Homeowner.Name" class="form-control">
                    <span asp-validation-for="@Model.Homeowner.Name" class="text-danger" ></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Homeowner.IdentificationDocument" class="form-label"></label>
                    <input asp-for="@Model.Homeowner.IdentificationDocument" class="form-control">
                    <span asp-validation-for="@Model.Homeowner.IdentificationDocument" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Homeowner.CellPhone" class="form-label"></label>
                    <input asp-for="@Model.Homeowner.CellPhone" class="form-control">
                    <span asp-validation-for="@Model.Homeowner.CellPhone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Homeowner.Email" class="form-label"></label>
                    <input asp-for="@Model.Homeowner.Email" class="form-control">
                    <span asp-validation-for="@Model.Homeowner.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Homeowner.Units"></label>
                    <select class="form-select">
                        @foreach (var unit in @Model.Homeowner.Units)
                        {
                            <option>@unit.Building Apto: @unit.UnitNumber</option>
                        }
                    </select>
                </div>
                <div class="card text-center mb-3">
                        <h3 class="card-title p-2">Adicionar Unidade</h3>
                    <div class="p-3">
                        <select asp-for="@Model.VmId" asp-items="@Model.UnitysEmpty" class="form-select ">
                            <option selected disabled>-- Escolha uma Unidade --</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-warning">Alterar Morador</button>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Excluir Morador
                </button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">ATENÇÃO</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Você está Prestes a excluir o proprietário da Unidade: @($"{Model.Homeowner.Units.First().UnitNumber} {Model.Homeowner.Units.First().Building}")
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                <a asp-area="Admin" asp-controller="Homeowner" asp-action="Delete" asp-route-id="@Model.Homeowner.Id" class="btn btn-danger">Excluir</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>