@model Vehicle
<div class="container">
    <div class="card shadow">
        <div class="card-header text-center">
            <h2>Atualizar Veículo</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <input asp-for="@Model.UnitId" hidden>
                <div class="mb-3">
                    <label asp-for="@Model.Make" class="form-label"></label>
                    <input asp-for="@Model.Make" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Model" class="form-label"></label>
                    <input asp-for="@Model.Model" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.LicensePlate" class="form-label"></label>
                    <input asp-for="@Model.LicensePlate" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Type" class="form-label"></label>
                    <input asp-for="@Model.Type" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.TagNumber" class="form-label"></label>
                    <input asp-for="@Model.TagNumber" class="form-control">
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">

                            @if (Model.Rented)
                            {
                                <input asp-for="@Model.Rented" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                <label asp-for="@Model.Rented" class="form-check-label" for="flexSwitchCheckChecked"></label>
                                <div class="mb-3">
                                    <label asp-for="@Model.BuildingRentedBuider" class="form-label"></label>
                                    <input asp-for="@Model.BuildingRentedBuider" class="form-control" id="buider1">
                                </div>
                                <div class="mb-3">
                                    <label asp-for="@Model.RentedUnitNumber" class="form-label"></label>
                                    <input asp-for="@Model.RentedUnitNumber" class="form-control" id="buider2">
                                </div>
                                <div class="mb-3">
                                    <label asp-for="@Model.RentedFullName" class="form-label"></label>
                                    <input asp-for="@Model.RentedFullName" class="form-control" id="buider3">
                                </div>
                            }
                            else
                            {
                                <input asp-for="@Model.Rented" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                <label asp-for="@Model.Rented" class="form-check-label" for="flexSwitchCheckDefault"></label>
                                <div class="mb-3">
                                    <label asp-for="@Model.BuildingRentedBuider" class="form-label"></label>
                                    <input asp-for="@Model.BuildingRentedBuider" class="form-control" id="buider4" disabled>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="@Model.RentedUnitNumber" class="form-label"></label>
                                    <input asp-for="@Model.RentedUnitNumber" class="form-control" id="buider5" disabled>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="@Model.RentedFullName" class="form-label"></label>
                                    <input asp-for="@Model.RentedFullName" class="form-control" id="buider6" disabled>
                                </div>
                            }
                           
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Atualizar Veículo</button>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Excluir Veículo
                </button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">ATENÇÃO</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Você está Prestes a excluir o Veículo: Placa @($"{Model.LicensePlate}")
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                <a asp-area="Admin" asp-controller="Vehicle" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('flexSwitchCheckDefault').addEventListener('change', function () {
        const isChecked = this.checked;
        document.getElementById('buider4').disabled = !isChecked;
        document.getElementById('buider5').disabled = !isChecked;
        document.getElementById('buider6').disabled = !isChecked;
    });
</script>
<script>
    document.getElementById('flexSwitchCheckChecked').addEventListener('change', function () {
        const isChecked = this.checked;
        document.getElementById('buider1').disabled = !isChecked;
        document.getElementById('buider2').disabled = !isChecked;
        document.getElementById('buider3').disabled = !isChecked;
    });
</script>
        
