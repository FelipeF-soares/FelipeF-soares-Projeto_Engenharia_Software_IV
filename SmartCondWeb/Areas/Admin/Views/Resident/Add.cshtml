@model Resident
<div class="container">
    <div class="card shadow">
        <div class="card-header text-center">
            <h2>Adicionar Morador</h2>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="@Model.UnitId" hidden >
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.UnitCodeResident" class="form-label"></label>
                    <input asp-for="@Model.UnitCodeResident" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.IdentificationDocument" class="form-label"></label>
                    <input asp-for="@Model.IdentificationDocument" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CellPhone" class="form-label"></label>
                    <input asp-for="@Model.CellPhone" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageURL" class="form-label"></label>
                    <input type="file" name="file" accept=".jpg , .png" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Adicionar Morador</button>
            </form>
        </div>
    </div>
</div>

